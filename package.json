{
  "name": "doubtfire",
  "version": "4.0.0",
  "homepage": "http://doubtfire.ict.swin.edu.au",
  "description": "A modern, lightweight learning management system.",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/doubtfire-lms/doubtfire-web.git"
  },
  "scripts": {
    "build": "npm-run-all clean:prod build:prod",
    "build:dev": "webpack-dev-server --progress --config config/webpack/dev.webpack.conf.js --hot",
    "build:prod": "webpack -p --progress --config config/webpack/prod.webpack.conf.js",
    "build:serve": "npm-run-all build serve:prod",
    "clean:dev": "rimraf dev/",
    "clean:prod": "rimraf dist/",
    "dev": "npm-run-all clean:dev --parallel verify:watch build:dev serve:dev",
    "copyenv": "rm src/app/api/env.coffee && gulp copyenv",
    "release": "npm-run-all verify test:coverage build test:browser",
    "serve:dev": "echo Starting DEV server",
    "serve:prod": "npm run serve:prod:https",
    "serve:prod:http": "serve -C -p 8000 dist/",
    "serve:prod:https": "serve-https -p 8000 -d dist/ --servername localhost",
    "start": "npm run dev",
    "test": "npm run test:unit",
    "test:browser": "protractor config/testBrowser/protractor.conf.js",
    "test:coverage": "npm run test:unit:once",
    "test:unit": "karma start ./config/testUnit/karma.conf.js",
    "test:unit:debug": "karma start ./config/testUnit/karma.conf.js --debug",
    "test:unit:once": "karma start --singleRun=true ./config/testUnit/karma.conf.js",
    "verify": "npm-run-all verify:coffee verify:css verify:js --silent",
    "verify:css": "sass-lint -c config/verify/sasslint.yml --verbose  && echo ✅ verify:css success",
    "verify:css:watch": "chokidar 'src/**/*.sass' 'src/**/*.scss' -c 'npm run verify:css' --initial --silent",
    "verify:js": "eslint -c config/verify/.eslintrc \"src/**/*.js\" \"unitTest/**/*.js\" \"config/**/*.js\" && echo ✅ verify:js success",
    "verify:js:watch": "chokidar 'src/**/*.js' 'unitTest/**/*.js' 'config/**/*.js' -c 'npm run verify:js' --initial --silent",
    "verify:coffee": "gulp verify:coffee",
    "verify:coffee:watch": "chokidar 'src/**/*.coffee' 'unitTest/**/*.coffee' 'config/**/*.coffee' -c 'npm run verify:coffee' --initial --silent",
    "verify:watch": "npm-run-all --parallel verify:coffee:watch verify:css:watch verify:js:watch --silent",
    "postinstall": "./node_modules/protractor/bin/webdriver-manager update"
  },
  "dependencies": {
    "angular": "1.3.19",
    "angular-bootstrap": "~0.12.0",
    "angular-cookies": "1.2.28",
    "angular-file-upload": "2.3.4",
    "angular-filter": "~0.5.4",
    "angular-local-storage": "^0.2.7",
    "angular-markdown-filter": "1.3.2",
    "angular-nvd3": "~1.0.3",
    "angular-resource": "1.2.28",
    "angular-sanitize": "1.2.27",
    "angular-ui-bootstrap": "0.14.3",
    "angular-ui-codemirror": "0.3.0",
    "angular-ui-router": "0.3.1",
    "angular-xeditable": "0.1.12",
    "angulartics": "~1.0.3",
    "angulartics-google-analytics": "~0.1.4",
    "bootstrap-sass": "~3.3.6",
    "codemirror": "^5.17.0",
    "d3": "3.4.11",
    "font-awesome": "4.6.3",
    "lodash": "4.2.0",
    "moment": "2.1.0",
    "ng-csv": "0.2.3",
    "ng-file-upload": "^12.0.4",
    "nvd3": "1.8.1",
    "showdown": "~1.3.0",
    "underscore.string": "3.3.4"
  },
  "devDependencies": {
    "angular-mocks": "1.5.5",
    "autoprefixer": "6.3.6",
    "babel-core": "6.4.5",
    "babel-loader": "6.2.1",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-preset-es2015": "6.3.13",
    "babel-runtime": "6.3.19",
    "chokidar-cli": "1.2.0",
    "coffee-loader": "0.7.2",
    "css-loader": "0.23.1",
    "cz-customizable": "4.0.0",
    "cz-customizable-ghooks": "1.2.0",
    "eslint": "1.10.3",
    "eslint-config-defaults": "8.0.2",
    "extract-text-webpack-plugin": "1.0.1",
    "favicons-webpack-plugin": "0.0.6",
    "file-loader": "0.8.5",
    "ghooks": "1.2.1",
    "gulp": "^3.9.1",
    "gulp-coffeelint": "0.6.0",
    "gulp-rename": "^1.2.2",
    "html-loader": "0.4.3",
    "html-webpack-plugin": "2.7.1",
    "isparta-instrumenter-loader": "1.0.0",
    "jasmine-core": "2.4.1",
    "jasmine-reporters": "2.1.1",
    "jasmine-spec-reporter": "2.4.0",
    "js-yaml": "3.6.1",
    "karma": "0.13.22",
    "karma-chrome-launcher": "0.2.3",
    "karma-coverage": "0.5.5",
    "karma-jasmine": "0.3.8",
    "karma-junit-reporter": "0.4.2",
    "karma-ng-html2js-preprocessor": "0.2.0",
    "karma-phantomjs-launcher": "1.0.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-threshold-reporter": "0.1.15",
    "karma-webpack": "1.7.0",
    "lodash": "3.10.1",
    "node-sass": "3.8.0",
    "npm-run-all": "2.1.1",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "2.1.7",
    "postcss-loader": "0.8.2",
    "protractor": "3.2.1",
    "rimraf": "2.5.2",
    "sass-lint": "1.8.2",
    "sass-loader": "3.1.2",
    "serve": "1.4.0",
    "serve-https": "1.5.3",
    "style-loader": "0.13.0",
    "webpack": "1.12.11",
    "webpack-dev-server": "1.14.1"
  }
}
